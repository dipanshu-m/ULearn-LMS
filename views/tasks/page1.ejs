    @media (min-height: 1000px) and (max-width: 700px) {
        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    }
    @media (min-height: 1350px) and (min-width: 700px) {
        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    }
</style>

</html>